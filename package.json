{
  "name": "birdwatching_handbook",
  "version": "2.0.0",
  "description": "A handbook for birdwatching",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "t2ek1ng0",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10"
  },
  "dependencies": {
    "axios": "^1.13.1",
    "node-fetch": "^3.3.2"
  },
  "build": {
    "appId": "org.gaojiyingwen.birdwatchinghandbook",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "buildDependenciesFromSource": false,
    "forceCodeSigning": false,
    "extraResources": [
      { "from": "dist/model_predict", "to": "model_predict" },
      { "from": "records.json", "to": "." }
    ]

  }
}
